# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{c,h}]
indent_style = tab
indent_size  = 8

[*.{cpp,hpp}]
indent_style = tab
indent_size  = 8

[*.json]
indent_style = space
indent_size  = 4

[*.xml]
indent_style = space
indent_size  = 4
